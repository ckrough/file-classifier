<?xml version="1.0" encoding="UTF-8"?>
<prompt>
  <instruction>Apply document archival system naming conventions to the following raw metadata.</instruction>

  <input>
    <field name="domain">{domain}</field>
    <field name="category">{category}</field>
    <field name="doctype">{doctype}</field>
    <field name="vendor_raw">{vendor_raw}</field>
    <field name="date_raw">{date_raw}</field>
    <field name="subject_raw">{subject_raw}</field>
  </input>

  <output_schema>
    <field name="domain">unchanged from input</field>
    <field name="category">unchanged from input</field>
    <field name="doctype">standardized</field>
    <field name="vendor_name">normalized per conventions</field>
    <field name="date">YYYYMMDD format</field>
    <field name="subject">normalized 1-3 words</field>
  </output_schema>
</prompt>
