<?xml version="1.0" encoding="UTF-8"?>
<prompt>
  <instruction>Analyze the following document and extract raw metadata following the classification taxonomy.</instruction>

  <input>
    <filename>{filename}</filename>
    <content>{content}</content>
  </input>

  <extract>
    <field name="domain" required="true">Financial/Property/Insurance/Tax/Legal/Medical</field>
    <field name="category" required="true">specific category within the domain</field>
    <field name="doctype" required="true">statement/receipt/invoice/policy/etc.</field>
    <field name="vendor_raw" required="true">company/entity name as it appears</field>
    <field name="dates_raw" required="true">all dates found, in original format</field>
    <field name="subject_raw" required="true">purpose or subject matter</field>
    <field name="amounts" required="false">significant dollar amounts</field>
    <field name="account_types" required="false">account types mentioned</field>
  </extract>
</prompt>
