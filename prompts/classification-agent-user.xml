<?xml version="1.0" encoding="UTF-8"?>
<prompt>
  <instruction>Analyze the following document and extract raw metadata following the classification taxonomy.</instruction>

  <input>
    <filename>{filename}</filename>
    <content>{content}</content>
  </input>

  <extract>
    <field name="domain" required="true">financial/property/insurance/legal/medical/employment/utilities/education</field>
    <field name="category" required="true">specific category within the domain (e.g., banking, tax, real_estate)</field>
    <field name="doctype" required="true">statement/receipt/invoice/policy/etc.</field>
    <field name="vendor_raw" required="true">company/entity name as it appears</field>
    <field name="date_raw" required="true">most relevant date (invoice/document date preferred), in original format</field>
    <field name="subject_raw" required="true">purpose or subject matter</field>
    <field name="account_types" required="false">account types mentioned (e.g., ["checking", "IRA"])</field>
  </extract>
</prompt>
